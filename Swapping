
import java.util.Scanner;

public class Swapping {
	public static void main(String args[]){
		Scanner in = new Scanner(System.in);
		System.out.println("Enter the number 1");
		int x= in.nextInt();
		System.out.println("Enter the number 2");
		int y= in.nextInt();
		
		System.out.println("before swapping : number 1 "+x+"number 2 "+y);
		x=x+y; //x contains sum of x&y
		y=x-y; //taking difference of x&y assigns the value of x(before swapping) to y
		x=x-y; //taking difference of x&y assigns the value of y(before swapping) to x
		//the values are swapped
		System.out.println("After Swapping: number 1 "+x+"number 2 "+y);
		
	}

}
